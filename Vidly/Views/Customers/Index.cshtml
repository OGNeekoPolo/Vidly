@using Vidly.Models
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<div>
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
</div>
<br />


@if (Model.Count == 0)
{
    <text>There are no customers at this time.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.CustomerId }, null)
                    </td>
                    <td>
                        @customer.MembershipType.MembershipName
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

