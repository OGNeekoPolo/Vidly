@using Vidly.Models
@model List<Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</div>
<br />
@if (Model.Count < 1)
{
    <text>There are no movies to show at this time.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.MovieId }, null)
                    </td>
                    <td>
                        @movie.MovieGenre.GenreName
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

